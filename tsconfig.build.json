{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"emitDeclarationOnly": false,
		"rootDir": "src",
		"outDir": ".tsc/dist",
		"tsBuildInfoFile": ".tsc/dist/tsconfig.build.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.spec.ts"]
}
